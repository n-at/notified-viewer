{%  extends "layout.twig" %}

{% block title %}notified-viewer{% endblock %}

{% block body %}

    <div class="page-header">
        <h1>notified viewer</h1>
    </div>

    <div class="logout-form text-right">
        <a href="logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    {% include "templates.twig" %}

    <div class="text-center">
        <strong>Notification count: </strong>{{ count }}
    </div>

    {% include "paginator.twig" %}
    {% for notification in notifications %}
        <div class="panel panel-primary">
            <div class="panel-body notification">
                <ul class="list-unstyled">
                    <li><strong>Template:</strong> {{ notification.template }}</li>
                    <li><strong>Created:</strong> {{ notification.dateCreated }}</li>
                    <li><strong>Sent:</strong> {{ notification.dateSent }}</li>
                    <li><strong>Status:</strong> {{ notification.status }}</li>
                    <li><strong>Body:</strong> {{ notification.body }}</li>
                </ul>
            </div>
        </div>
    {% endfor %}
    {% include "paginator.twig" %}


{% endblock %}